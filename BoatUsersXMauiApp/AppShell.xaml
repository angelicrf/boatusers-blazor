<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BoatUsersXMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BoatUsersXMauiApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Data"
            ContentTemplate="{DataTemplate local:BoatUsersData}"
            Route="Data"
            Icon="appicon" />
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Home"
            Icon="icon_notes" 
             />
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:BUAbout}"
            Route="About"
            Icon="icon_notes"
             />
    </TabBar>

</Shell>
