<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoatUsersXMauiApp.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            >

            <Label
                Text="Bluetooth Devices"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Bluetooth Devices"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Button
                x:Name="BluetoothBtn"
                Text="Click me"
                SemanticProperties.Hint="Bluetooth Devices"
                Clicked="OnCounterClicked"
                Background="Blue"
                BorderColor="Aquamarine"
                TextColor="Chocolate"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
